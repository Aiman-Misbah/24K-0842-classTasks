#include <iostream>
#include <string>
using namespace std;

class Node
{
public:
    string data;
    Node *next;
    Node(string value)
    {
        data = value;
        next = nullptr;
    }
};

class LinkedList
{
public:
    Node *head;
    LinkedList()
    {
        head = nullptr;
    }

    void insertAtTail(string value)
    {
        Node *newNode = new Node(value);
        if (head == nullptr)
        {
            head = newNode;
            return;
        }
        Node *temp = head;
        while (temp->next != nullptr)
        {
            temp = temp->next;
        }
        temp->next = newNode;
    }

    void deleteFromFront()
    {
        if (head == nullptr)
        {
            cout << "Catalog is empty, nothing to delete." << endl;
            return;
        }
        Node *temp = head;
        head = head->next;
        delete temp;
    }

    void searchByTitle(string value)
    {
        Node *temp = head;
        while (temp != nullptr)
        {
            if (temp->data == value)
            {
                cout << "Book found: " << temp->data << endl;
                return;
            }
            temp = temp->next;
        }
        cout << "Book not found: " << value << endl;
    }

    void searchByPosition(int pos)
    {
        if (pos <= 0)
        {
            cout << "Invalid position." << endl;
            return;
        }
        Node *temp = head;
        int count = 1;
        while (temp != nullptr)
        {
            if (count == pos)
            {
                cout << "Book at position " << pos << ": " << temp->data << endl;
                return;
            }
            temp = temp->next;
            count++;
        }
        cout << "No book found at position " << pos << endl;
    }

    void displayList()
    {
        if (head == nullptr)
        {
            cout << "Catalog is empty." << endl;
            return;
        }
        Node *temp = head;
        while (temp != nullptr)
        {
            cout << temp->data << endl;
            temp = temp->next;
        }
    }
};

int main()
{
    LinkedList catalog;

    catalog.insertAtTail("Data Structures");
    catalog.insertAtTail("Operating Systems");
    catalog.insertAtTail("Computer Networks");
    catalog.insertAtTail("Database Systems");
    catalog.insertAtTail("Islamabad History");

    catalog.displayList();
    cout << endl;

    catalog.deleteFromFront();
    catalog.displayList();
    cout << endl;

    catalog.searchByTitle("Database Systems");
    catalog.searchByTitle("Karachi Tales");
    cout << endl;

    catalog.searchByPosition(2);
    catalog.searchByPosition(10);

    return 0;
}

